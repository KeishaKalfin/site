---
import Layout from '../layouts/Layout.astro';
import Header from '../components/ui/Header.astro';

// Test Stripe configuration
let stripeStatus = 'Testing...';
let error = null;

try {
  const stripe = await import('stripe');
  const stripeInstance = new stripe.default(process.env.STRIPE_SECRET_KEY || '');
  
  // Test by retrieving a product
  await stripeInstance.products.retrieve('prod_TR0Kmw7pbb8Pcs');
  stripeStatus = '✅ Stripe connection successful!';
  
} catch (err) {
  console.error('Stripe test error:', err);
  error = err instanceof Error ? err.message : 'Unknown error occurred';
  stripeStatus = '❌ Stripe connection failed';
}
---

<Layout title="Test Stripe - BRAVE">
  <Header />
  <main class="pt-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">Stripe Integration Test</h1>
      
      <div class="bg-gray-50 rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Connection Status</h2>
        <p class="text-lg font-medium text-gray-800">{stripeStatus}</p>
        
        {error && (
          <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded">
            <p class="text-red-700 font-medium">Error Details:</p>
            <p class="text-red-600 text-sm mt-1">{error}</p>
          </div>
        )}
      </div>
      
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-blue-900 mb-2">Stripe Configuration Status</h3>
        <div class="space-y-2 text-sm">
          <p><strong>Secret Key:</strong> {process.env.STRIPE_SECRET_KEY ? '✅ Set' : '❌ Missing'}</p>
          <p><strong>Publishable Key:</strong> {process.env.STRIPE_PUBLISHABLE_KEY ? '✅ Set' : '❌ Missing'}</p>
          <p><strong>Key Format:</strong> {process.env.STRIPE_SECRET_KEY?.startsWith('sk_live_') ? '✅ Live Mode' : '⚠️ Test Mode'}</p>
        </div>
      </div>
      
      <div class="mt-8 space-y-4">
        <a 
          href="/products/1"
          class="inline-block bg-black text-white px-6 py-3 font-semibold hover:bg-gray-800 transition-colors"
        >
          Test Product Page
        </a>
        <br />
        <a 
          href="/checkout-stripe?product=1&quantity=1"
          class="inline-block bg-green-600 text-white px-6 py-3 font-semibold hover:bg-green-700 transition-colors"
        >
          Test Checkout Flow
        </a>
      </div>
    </div>
  </main>
</Layout>